<div id = "new-user-form">
<%= form_for @user do |f| %>
<div>
  <%= f.label :username%>
  <%= f.text_field :username%>
</div>
<div>
  <%= f.label :name%>
  <%= f.text_field :name%>
</div>
<div>
  <%= f.label :password%>
  <%= f.text_field :password%>
</div>
<div>
  <%= f.label :country%>
  <%= f.text_field :country%>
</div>
<div>
  <%= f.label :city%>
  <%= f.text_field :city%>
</div>
<div>
  <%= f.label :bio, "Tell us about yourself"%>
  <%= f.text_area :bio %>
</div>
<div>
  <%= f.label :image_url%>
  <%= f.text_field :image_url, :placeholder => "jpg or png"%>
</div>

  <%= f.submit %>
<% end %>
</div>
