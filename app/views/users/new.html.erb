
<div id = "new-user-form">

  <%= form_for @user do |f| %>
  <% if @errors %>
  <ul class = "error_message">
    <% @errors.each do |error| %>
    <li >  <%= error %> </li>
    <% end %>
  </ul>
  <% end %>
  <div class = 'form-data'>
    <%= f.label :username%>
    <%= f.text_field :username%>
  </div>
  <div class = 'form-data'>
    <%= f.label :name%>
    <%= f.text_field :name%>
  </div>
  <div class = 'form-data'>
    <%= f.label :password%>
    <%= f.text_field :password%>
  </div>
  <div class = 'form-data'>
    <%= f.label :country%>
    <%= f.text_field :country%>
  </div>
  <div class = 'form-data'>
    <%= f.label :city%>
    <%= f.text_field :city%>
  </div>
  <div class = 'form-data'>
    <%= f.label :bio, "Tell us about yourself"%>
    <%= f.text_area :bio %>
  </div>
  <div class = 'form-data'>
    <%= f.label :image_url%>
    <%= f.text_field :image_url, :placeholder => "jpg or png"%>
  </div>

    <%= f.submit %>
  <% end %>
</div>
