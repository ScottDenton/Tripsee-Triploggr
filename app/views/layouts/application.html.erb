<!DOCTYPE html>
<html>
  <head>
    <title>Tripsee</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Permanent+Marker" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="shortcut icon" type="image/png" href="https://i.imgur.com/k28w4l8.png"/>



  </head>

  <body>

    <nav class="navbar dark-grey-bg">


  <ul class="nav nav-pills">
      <li class="nav-item white">
        <% if logged_in? %>
        <%= link_to "Home", user_path(session[:user_id]), :class => "home_link" %>
        <% end %>
      </li>

    <li class="nav-item white">
      <% if !logged_in?  %>
      <%= link_to "Sign up", new_user_path %>
      <% end %>
    </li>
    <li class="nav-item white">
      <% if logged_in?  %>
      <%= link_to "Favorites", favorites_path %>
      <% end %>
    </li>

  </ul>


  <h1 class = 'dark-grey-bg main-heading'>
    <% if logged_in? %>
    <%= link_to 'Tripsee', user_path(session[:user_id]), :class => 'no-link'  %>
    <% else %>
    Tripsee
    <% end %>
  <small class="text-muted">Find your next holiday</small>
  </h1>

  <ul class="nav nav-pills">

      <li class="nav-item white float-left">
      <% if logged_in? %>
        <%= link_to 'Logout', logout_path, method: 'DELETE'%>
        <% else %>
        <%= link_to "Login", login_path %>
      <% end %>
    </li>


  </ul>
</nav>





    <%= yield %>
  </body>
</html>
