<div>
  <div>
    <%= form_for [@user, @trip] do |f|%>
    <%= f.label :location %>
    <%= f.collection_select :location_id, Location.all, :id, :city%>

    <%= f.submit %>
    <% end %>
  </div>
  <div>
    <p>Cant find your city, add a new one right here</p>
    <%= form_for @location do |f|%>
    <%= f.label :country, :placeholder => "ex United States" %>
    <%= f.text_field :country%>
    <%= f.label :city %>
    <%= f.text_field :city%>

    <%= f.submit %>

    <% end %>
  </div>
</div>
